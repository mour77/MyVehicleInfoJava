<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:hint="description"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"

            android:textColor="@color/teal_700"

            android:textSize="18sp"
            app:drawableStartCompat="@drawable/repair_32" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"

            >


            <TextView
                android:id="@+id/moneyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="22dp"

                android:drawablePadding="8dp"
                android:hint="Money"

                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/money_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp"
                android:drawablePadding="8dp"
                android:hint="Date"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/baseline_date_range_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/remarksTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:drawablePadding="8dp"

                android:hint="remarks"

                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/comments_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/kmTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:drawablePadding="8dp"
                android:hint="km"

                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/odometer_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/remarksTV" />


        </androidx.constraintlayout.widget.ConstraintLayout>















    </LinearLayout>


</androidx.cardview.widget.CardView>
